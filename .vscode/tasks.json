{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Default Build",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++"
		},
		{
			"type": "cppbuild",
			"label": "Custom Judge",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-D",
				"CUSTOM_JUDGE",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build"
			},
			"detail": "compiler: /usr/bin/g++"
		},
		{
			"type": "shell",
			"label": "Build and run",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"&&",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "test"
			},
			"detail": "compiler: /usr/bin/g++",
			"presentation": {
				"showReuseMessage": false,
				"panel": "shared",
				"clear": true,
				"focus": true
			}
		},
		{
			"type": "shell",
			"label": "Run Compiled",
			"command": "",
			"args": [
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "test"
			},
			"detail": "compiler: /usr/bin/g++",
			"presentation": {
				"showReuseMessage": false,
				"panel": "shared",
				"clear": true,
				"focus": true
			}
		},
		{
			"type": "shell",
			"label": "Build and run with i/o",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"&&",
				"${fileDirname}/${fileBasenameNoExtension}",
				"<",
				"${workspaceFolder}/IO/input.txt",
				">",
				"${workspaceFolder}/IO/output.txt",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "test"
			},
			"detail": "compiler: /usr/bin/g++",
			"presentation": {
				"showReuseMessage": false,
				"panel": "shared",
				"clear": true,
				"focus": true,
				"close": true
			}
		}
	]
}